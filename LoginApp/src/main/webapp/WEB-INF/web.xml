<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<display-name>LoginServletExample</display-name>

	<!-- Step 6: Configure servlet mapping in web.xml. This first part defines 
		a "name" for the servlet and links it to the full Java class path. -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.example.LoginServlet</servlet-class>
	</servlet>

	<!-- This second part maps the "name" defined above to a URL pattern. When 
		the server receives a request for "/login", it will be handled by the "LoginServlet". 
		This "/login" must match the 'action' in the HTML form. -->
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- This is optional but good practice. It tells the server to load "index.html" 
		automatically when someone visits the root of your web application (e.g., 
		http://localhost:8080/YourApp/) -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>